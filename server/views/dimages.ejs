<html>
    <%- include('partials/head') %> 
    <body>
        <%- include('partials/navbar') %>
        <div class="container mt-4">
            <h1>Immagini scattate dal drone</h1>

            <div class="row">
                <% for(let image of images) { %>
                    <div hash="<%= image.hashIpfs %>" class="card card-select" style="width: 30%; margin-right: 1%; margin-left: 1%; margin-top: 20px" data-cardselect>
                        <img src="https://ipfs.io/ipfs/<%=image.hashIpfs%>" class="card-img-top">
                        <div class="card-body">
                          <p class="card-text"><strong>Data di caricamento:</strong> <%= convertDate(image.addTime) %></p>
                          <a style="width: 100%;" href="/images/<%=image.hashIpfs%>" class="btn btn-primary">Dettaglio Immagine</a>
                          <button style="width: 100%;" class="mt-3 btn btn-info btn-select" data-cardselectbutton></button>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
        <div id="form-gdl-container" class="fixed hidden">
            <div class="container">
                <h1 class="mt-3">Aggiunta immagini al servizio di fotogrammetria</h1>
                <form id="form-gdl" method="POST" action="/gdl/invoke/">
                    <div id="selected-inputs"></div>
                    <div class="form-group">
                        <p><strong>Immagini Selezionate:</strong> <span id="selected-images"></span></p>
                        <label for="exampleFormControlTextarea1">Annotazioni</label>
                        <textarea name="annotazioni" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-lg btn-primary">Invoca il servizio di fotogrammetria e aggiungi al giornale dei lavori</button>
                </form>
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
        <script src="/js/imageSelectionForm.js"></script>
    </body>
</html>